<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BABYTI.ME</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @*<script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.js")" type="text/javascript"></script>
    <script type="text/javascript" src="../../Scripts/underscore.js"></script>
    <script type="text/javascript" src="../../Scripts/backbone.js"></script>
    <script src="@Url.Content("~/Scripts/localstoragepolyfill.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Main.js")" type="text/javascript"></script>
    @*<script src="@Url.Content("~/Scripts/StopWatch.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Timer.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/TimerCollection.js")" type="text/javascript"></script>*@
</head>

<body>
    <div data-role="page" id="page1">
        <div data-theme="e" data-role="header">
            <h3>BABYTI.ME</h3>
            <div data-role="fieldcontain" id="timers">
                @RenderBody()					
            </div>
        </div>
        <div data-role="content" style="padding: 15px">
        </div>
    </div>
    <script type="text/template" id="timersListTemplate">
        <h2><%= Username%>'s Timers</h2>
        <a id="clearAllTimers" href="">Clear</a>
    </script>

    <script type="text/template" id="timerTemplate">
        <fieldset data-role="controlgroup">
        <div class="label" contenteditable=true id="<%=Name%>TimerLabel"><%=Label%></div>
        <input class="timerDisplay" type="text" id="<%=Name%>TimerTextBox" value="" readonly="readonly"></input>
        <a class="startbutton" name="<%=Name%>Button" id="<%=Name%>Button" data-role="button" data-inline="false" data-transition="flow" data-theme="e" href="" data-icon="refresh" data-iconpos="left">Restart</a></div>
        </fieldset>
    </script>    
</body>
</html>
